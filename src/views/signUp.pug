extends layout 


mixin inputbox(labelText,inputType,inputId)
 .input-box
    label= labelText
    input(type=inputType id=inputId required)

mixin inputbox-pass(labelText,inputId)
 .input-box
    label= labelText
    input(type="password" placeholder="************" id=inputId required)

block content 
    .signUp
        form.signUp
            +inputbox("Nome","text","name")
            +inputbox("Email","text","email")
            +inputbox-pass("Senha","passwd")

            button Criar conta
